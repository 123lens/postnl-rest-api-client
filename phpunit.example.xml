<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
>
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="API_KEY" value="--your-api-key--" />
        <env name="API_SANDBOX_MODE" value="true" />
        <env name="CUSTOMER_CODE" value="--customer_code--" />
        <env name="GLOBAL_PACK_CODE" value="--global_pack_code--" />
        <env name="CUSTOMER_NUMBER" value="--customer_number--" />
        <env name="COLLECTION_LOCATION" value="--collection_location--" />
    </php>
</phpunit>
